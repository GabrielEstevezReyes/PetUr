<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_patron"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".home.perfil.InfoCardPet">

    <TextView
        android:id="@+id/nombreInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="center"
        android:text="NOMBRE DE LA MASCOTA"
        android:textAllCaps="true"
        android:textColor="@color/TextColor"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#DADADA" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imageView6"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:foregroundGravity="center"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Peso"
                android:textAllCaps="true"
                android:textColor="@color/TextColorSecundary"
                android:textSize="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/TextColorSecundary"
                android:fontFamily="@font/sf_regular"
                android:text="25 Kg"
                android:textAllCaps="false"
                android:textColor="@color/TextColor"
                android:textSize="14dp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Guardar"
            android:textColor="@color/TextColorSecundary"
            android:textSize="12dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Proxima comida"
                android:textAllCaps="true"
                android:textColor="@color/TextColorSecundary"
                android:textSize="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/TextColorSecundary"
                android:fontFamily="@font/sf_regular"

                android:text="Purina DogChow Adulto"
                android:textAllCaps="false"
                android:textColor="@color/TextColor"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="@color/TextColorSecundary"
                        android:fontFamily="@font/sf_regular"
                        android:gravity="center"
                        android:text="250"
                        android:textAllCaps="false"
                        android:textColor="@color/TextColor"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:text="gm"/>



                </LinearLayout>

                <EditText
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="@color/TextColorSecundary"
                    android:fontFamily="@font/sf_regular"
                    android:gravity="center"
                    android:text="13:16"
                    android:textAllCaps="false"
                    android:textColor="@color/TextColor"
                    android:textSize="14dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:backgroundTint="@color/TextColorSecundary"
                    android:fontFamily="@font/sf_regular"
                    android:gravity="center"
                    android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                    android:hint="12/07/2020"
                    android:inputType="date"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/TextColor"
                    android:textSize="14dp" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Guardar"
            android:textColor="@color/TextColorSecundary"
            android:textSize="12dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="SU PROXIMA CITA MEDICA"
                android:textAllCaps="true"
                android:textColor="@color/TextColorSecundary"
                android:textSize="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/TextColorSecundary"
                android:fontFamily="@font/sf_regular"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/TextColor"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="citas"
            android:text="+ Agendar"
            android:textColor="@color/TextColorSecundary"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:fontFamily="@font/poppins_semi_bold"
                android:onClick="grupos"
                android:text="Social"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="12sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:onClick="carnet"
                android:text="Medico"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:fontFamily="@font/poppins_semi_bold"
                android:onClick="sitios"
                android:text="Ubicación Real"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="12sp" />

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn"
                android:fontFamily="@font/poppins_semi_bold"
                android:onClick="casa"
                android:text="Casa"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>






</LinearLayout>



