<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFF"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="center"
        android:text="CREAR CUENTA"
        android:textAllCaps="true"
        android:textColor="@color/TextColor"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#DADADA" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_bold"
                    android:text="Nombre(s)"
                    android:textAllCaps="true"
                    android:textColor="@color/TextColorSecundary"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/registroUsuarioNombre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/TextColorSecundary"
                    android:fontFamily="@font/sf_regular"
                    android:padding="15dp"
                    android:textColor="@color/TextColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_bold"
                        android:text="Apellido Paterno"
                        android:textAllCaps="true"
                        android:textColor="@color/TextColorSecundary"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/registroUsuarioApellidoP"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/TextColorSecundary"
                        android:fontFamily="@font/sf_regular"
                        android:padding="16dp"
                        android:textColor="@color/TextColor"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="42dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_bold"
                    android:text="Correo electrónico"
                    android:textAllCaps="true"
                    android:textColor="@color/TextColorSecundary"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/registroUsuarioMail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/TextColorSecundary"
                    android:fontFamily="@font/sf_regular"
                    android:inputType="textEmailAddress"
                    android:padding="15dp"
                    android:textColor="@color/TextColor"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_bold"
                        android:text="Teléfono celular"
                        android:textAllCaps="true"
                        android:textColor="@color/TextColorSecundary"
                        android:textSize="12sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/registroUsuarioCelular"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/TextColorSecundary"
                            android:fontFamily="@font/sf_regular"
                            android:inputType="phone"
                            android:padding="15dp"
                            android:textColor="@color/TextColor"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_bold"
                    android:text="Contraseña"
                    android:textAllCaps="true"
                    android:textColor="@color/TextColorSecundary"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/registroUsuarioPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/TextColorSecundary"
                    android:fontFamily="@font/sf_regular"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColor="@color/TextColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_bold"
                    android:text="Confirmar contraseña"
                    android:textAllCaps="true"
                    android:textColor="@color/TextColorSecundary"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/registroUsuarioConfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/TextColorSecundary"
                    android:fontFamily="@font/sf_regular"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColor="@color/TextColor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/registroUsuarioErrorMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/sf_regular"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/btn"
                android:fontFamily="@font/sf_bold"
                android:onClick="updateGroup"
                android:text="Crear cuenta"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Al crear una cuenta acepta nuestros"
                    android:textAllCaps="false"
                    android:textColor="#2D374E"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:gravity="center"
                        android:text="Términos y condiciones y el  Aviso de privacidad."
                        android:textAllCaps="false"
                        android:textColor="#2D374E"
                        android:textSize="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B3000000" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>



    </ScrollView>

</LinearLayout>




