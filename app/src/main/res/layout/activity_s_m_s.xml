<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".SMS">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:gravity="center"
                    android:text="¡Por ultimo!"
                    android:textColor="@color/texto_color_negro"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_regular"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Ingresa el código de confirmación que enviamos por SMS"
                    android:textColor="@color/texto_color_gris"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/sms_code"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/texto_color_gris"
                    android:ems="10"
                    android:fontFamily="@font/sf_regular"
                    android:gravity="center"
                    android:hint="Ingresar código"
                    android:inputType="number"
                    android:padding="10dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/texto_color_negro"
                    android:textColorHighlight="@color/texto_color_negro"
                    android:textColorHint="@color/texto_color_gris"
                    android:textColorLink="@color/texto_color_negro"
                    android:textSize="14sp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:onClick="updateGroup"
                    android:text="Registrarse"
                    android:textAllCaps="true"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    tools:ignore="HardcodedText" />

        </LinearLayout>

</LinearLayout>
