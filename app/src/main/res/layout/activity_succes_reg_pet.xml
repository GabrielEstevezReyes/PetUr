<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".home.mascota.SuccesRegPet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/petSuccesImageEdit"
            android:layout_width="175dp"
            android:layout_height="175dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10dp"
            app:civ_shadow_color="#003F51B5"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_pet_success_1"/>

        <TextView
            android:id="@+id/NewPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:gravity="center"
            android:text="Hunter, Registrado"
            android:textAllCaps="true"
            android:textColor="@color/texto_color_negro"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="Resgitro exitÃ³so."
            android:textColor="@color/texto_color_negro"
            android:textSize="14sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn"
            android:fontFamily="@font/poppins_semi_bold"
            android:onClick="usccPurc"
            android:text="Aceptar y volver"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />


    </LinearLayout>

</LinearLayout>