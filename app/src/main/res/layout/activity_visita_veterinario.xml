<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".VisitaVeterinario">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        android:gravity="center"
        android:text="CITA MEDICA"
        android:textAllCaps="true"
        android:textColor="@color/texto_color_negro"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#DADADA" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_regular"
                android:text="Centro Veterinario Bichos"
                android:textColor="@color/texto_color_negro"
                android:textColorHighlight="@color/texto_color_gris"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFF"
            android:gravity="center"
            android:text="Cambiar"
            android:textSize="12sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edadMascotaIF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/texto_color_gris"
                        android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                        android:fontFamily="@font/sf_regular"
                        android:hint="Fecha"
                        android:paddingRight="5dp"
                        android:textAllCaps="true"
                        android:textColor="@color/texto_color_negro"
                        android:textColorHint="@color/texto_color_gris"
                        android:textColorLink="#FFF"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/texto_color_gris"
                        android:fontFamily="@font/sf_regular"
                        android:hint="Nombre del veterinario"
                        android:paddingRight="5dp"
                        android:textAllCaps="true"
                        android:textColor="@color/texto_color_negro"
                        android:textColorHint="@color/texto_color_gris"
                        android:textColorLink="#FFF"
                        android:textSize="14sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/texto_color_gris"
                        android:fontFamily="@font/sf_regular"
                        android:hint="Diagnostico"
                        android:paddingRight="10dp"
                        android:textAllCaps="true"
                        android:textColor="@color/texto_color_negro"
                        android:textColorHint="@color/texto_color_gris"
                        android:textColorLink="#FFF"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/sf_regular"
                        android:text="Proxima visita"
                        android:textColor="@color/texto_color_negro"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/edadMascotaIFS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/texto_color_gris"
                        android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                        android:fontFamily="@font/sf_regular"
                        android:hint="Fecha"
                        android:paddingRight="5dp"
                        android:textAllCaps="true"
                        android:textColor="@color/texto_color_negro"
                        android:textColorHint="@color/texto_color_gris"
                        android:textColorLink="#FFF"
                        android:textSize="14sp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/texto_color_gris"
                            android:fontFamily="@font/sf_regular"
                            android:hint="Asunto"
                            android:paddingRight="10dp"
                            android:textAllCaps="true"
                            android:textColor="@color/texto_color_negro"
                            android:textColorHint="@color/texto_color_gris"
                            android:textColorLink="#FFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn"
        android:onClick="lis_care2"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Guardar"
        android:textColor="#FFF"
        android:textSize="12sp" />


</LinearLayout>