<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_comida_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/nombre_comida"
        android:textAlignment="center"
        android:textColor="@color/texto_color_negro"
        android:textSize="@dimen/texto_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view14"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/item_comida_titulo"
        app:layout_constraintStart_toStartOf="@+id/item_comida_titulo"
        app:layout_constraintTop_toBottomOf="@+id/item_comida_titulo" />


    <TextView
        android:id="@+id/item_comida_descripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/grupo_abierto"
        android:textColor="@color/texto_color_negro"
        android:textSize="@dimen/texto_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_comida_titulo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <TextView
        android:id="@+id/item_comida_tamano"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/edicion_de"
        android:textColor="@color/texto_color_negro"
        android:textSize="@dimen/texto_default"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_comida_descripcion" />

    <TextView
        android:id="@+id/item_comida_fecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/adquirido"
        android:textColor="@color/texto_color_negro"
        android:textSize="@dimen/texto_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_comida_tamano"
        app:layout_constraintStart_toStartOf="@+id/item_comida_tamano"
        app:layout_constraintTop_toBottomOf="@+id/item_comida_tamano" />

    <ImageView
        android:id="@+id/item_comida_add_elemento"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_alimento"
        app:layout_constraintBottom_toBottomOf="@+id/item_comida_fecha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toTopOf="@+id/item_comida_tamano" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agregar_comida"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/texto_small"
        app:layout_constraintEnd_toEndOf="@+id/item_comida_add_elemento"
        app:layout_constraintStart_toStartOf="@+id/item_comida_add_elemento"
        app:layout_constraintTop_toBottomOf="@+id/item_comida_add_elemento" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
</layout>
